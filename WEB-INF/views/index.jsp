	<script>
		$(document).ready(function() {
			// 모든 캐러셀에 각각 초기화 코드와 이벤트를 적용
			$('.main-visual-box').each(function() {
				var owl = $(this).find('.owl-carousel');
				var dotsContainer = $(this).find('.owl-dots');
				var nextBtn = $(this).find('.control-wrap .next');
				var prevBtn = $(this).find('.control-wrap .prev');

				// OwlCarousel 초기화
				owl.owlCarousel({
					items : 1,
					loop : true,
					autoplay : true,
					autoplayTimeout : 5000,
					nav : false,
					dots : true,
					dotsContainer : dotsContainer
				// 각 캐러셀의 점 컨테이너를 정확히 지정
				});

				// 점 클릭 이벤트 추가
				dotsContainer.on('click', '.owl-dot', function() {
					var dotIndex = $(this).index();
					owl.trigger('to.owl.carousel', [ dotIndex, 300 ]); // 해당 점으로 이동
				});

				// 해당 캐러셀의 버튼에 이벤트 연결
				nextBtn.click(function() {
					owl.trigger('next.owl.carousel');
				});

				prevBtn.click(function() {
					owl.trigger('prev.owl.carousel');
				});
			});
		});
	</script>
